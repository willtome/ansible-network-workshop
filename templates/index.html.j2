{% for item in users %}
  <div data-role="main" class="ui-content">
    <div data-role="collapsible">
      <h1>{{item.username}} - Click to see details!</h1>
      <p>[all:vars]<br />
ansible_user={{item.username}}<br />
ansible_ssh_pass=ansible<br />
{% if ssh_port is defined %}<br />
ansible_port={{ ssh_port }}<br />
{% endif %}
<br />
[control]<br />
{% for vm in ec2_instances.instances %}
{% if item.username == vm.tags.Owner and 'control' == vm.tags.group %}
{{ vm.tags.Role }} ansible_host={{ vm.public_ip_address }}<br />
{% endif %}
{% endfor %}
<br />
[routers]<br />
{% for vm in ec2_instances.instances %}
{% if item.username == vm.tags.Owner and 'routers' == vm.tags.group %}
{{ vm.tags.Role }} ansible_host={{ vm.public_ip_address }}<br />
{% endif %}
{% endfor %}
<br />
[hosts]<br />
{% for vm in ec2_instances.instances %}
{% if item.username == vm.tags.Owner and 'hosts' == vm.tags.group %}
{{ vm.tags.Role }} ansible_host={{ vm.private_ip_address }}<br />
{% endif %}
{% endfor %}</p>
    </div>
  </div>
{% endfor %}
